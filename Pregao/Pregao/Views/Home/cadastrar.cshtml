                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary btn-lg">Inscreva-se</button>
                                @Html.ActionLink("Entrar", "entrar", null, new { @class = "btn btn-success" })
                            </div>
                        </div>


                    </fieldset>           
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}