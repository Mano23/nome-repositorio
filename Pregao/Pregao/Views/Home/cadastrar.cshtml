                                        @Html.TextBoxFor(model => model.Rua, new { placeholder = "Rua", @class = "form-control" })
                                    </div>
                                    <div class="col-md-6">
                                        @Html.ValidationMessageFor(model => model.Rua)
                                        @Html.Label("*", new { @style = "color:red" })
                                    </div>
                                </div>
                            </div>
