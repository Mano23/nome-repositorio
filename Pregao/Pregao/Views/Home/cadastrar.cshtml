                                    </div>
                                    <div class="col-md-6">
                                        @Html.ValidationMessageFor(model => model.Email)
                                        @Html.Label("*", new { @style = "color:red" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
