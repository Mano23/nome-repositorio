<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">@Html.ActionLink("Home", "index", "Home") / @Html.ActionLink("Entrar", "entrar", "Home")</h3>
        </div>
        <div class="panel-body">
            <div id="login2">
